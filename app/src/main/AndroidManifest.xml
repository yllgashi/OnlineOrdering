<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onlineordering">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineOrdering">
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:theme="@style/Theme.OnlineOrdering.NoWindowTitle">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.auth.LoginActivity" />
        <activity
            android:name=".ui.requestedOrders.CreateRequestOrderActivity"
            android:label="@string/create_request_title"
            android:theme="@style/Theme.OnlineOrdering.NoActionBar" />
        <activity
            android:name=".ui.products.CreateProductActivity"
            android:label="@string/create_product_title"
            android:theme="@style/Theme.OnlineOrdering.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.OnlineOrdering.NoActionBar" />
    </application>

</manifest>